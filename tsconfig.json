{
  "$schema" : "https://json.schemastore.org/tsconfig",
  "display" : "Node 20",
  "_version" : "20.10.0",

  "compilerOptions": {
    "lib": ["ES2023"],
    "module": "Node16",
    "target": "es2022",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node16"
  },

  "include": ["src"]
}